<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinco.Pages.Template.AddTemplatePage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="CREAR PLANTILLA"
             >
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="15">
            <!-- Plantilla Codigo -->
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <Label Text="Codigo Plantilla"></Label>
                <Entry x:Name="codTemplate"></Entry>
            </StackLayout>
            <!-- Plantilla Nombre -->
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <Label Text="Nombre Plantilla"></Label>
                <Entry x:Name="nameTemplate"></Entry>
            </StackLayout>
            
            <!-- Buttons Action -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="8">
                <Button x:Name="cancel"  Text="Cancelar" BackgroundColor="#d6d6d6"></Button>
                <Button x:Name="save"   Text="Guardar" BackgroundColor="#72bb53" TextColor="#ffffff"></Button>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>