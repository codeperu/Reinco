<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinco.Interfaces.Supervision.ListarPlantillaObra"
             Title="Listar Plantilla Obra">
    <ContentPage.Content>
        <ScrollView>
            
            <StackLayout>
                <ListView x:Name="plantillaObraListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="Texto O cosas">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding OnClickableLabel}" CommandParameter="{Binding nombrePlantillaObra}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>