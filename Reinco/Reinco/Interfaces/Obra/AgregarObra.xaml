<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:Reinco.Recursos"
             x:Class="Reinco.Interfaces.Obra.AgregarObra"
             Title="OBRA">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <Label Text="Código de la obra"></Label>
                <Entry x:Name="codigo"></Entry>
            </StackLayout>
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <Label Text="Nonbre De La Obra"></Label>
                <Entry x:Name="nombre"></Entry>
            </StackLayout>

            <!-- Asignar propietario de la obra-->
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <control:BindablePicker
                    Title="Asigne Un Propietario"
                    DisplayMemberPath="nombre"
                    SelectedValuePath="nombre"
                    SelectedValue ="{Binding Path=nombre, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand"
                    x:Name="asignarPropietario"
                    VerticalOptions="Center"/>
            </StackLayout>




            <!-- Añadir Responsable de la Obra  -->
            <StackLayout BackgroundColor="{StaticResource BoxColor}" Padding="8">
                <control:BindablePicker
                    Title="Asigne Un Responsable"
                    DisplayMemberPath="nombres"
                    SelectedValuePath="nombres"
                    SelectedValue ="{Binding Path=nombres, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand"
                    x:Name="asignarResponsable"
                    VerticalOptions="Center"/>
            </StackLayout>
                
            <!-- Selescionados -->
            <Label x:Name="sePropietario"></Label>
            <Label x:Name="seResponsable"></Label>
            <Button x:Name="cargarSe" Text="Cargar Se"></Button>

            <!-- Buttons Action -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="cancelar"  Text="Cancelar" BackgroundColor="#d6d6d6"></Button>
                <Button x:Name="guardar"   Text="Guardar" BackgroundColor="#72bb53" TextColor="#ffffff"></Button>
            </StackLayout>
            <!-- End -->
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>