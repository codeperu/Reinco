<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinco.Interfaces.PaginaUsuario"
             Title="USUARIO"
             >
    <ContentPage.Content>
        <StackLayout>
            <!-- ==================================================================================
            ========================== Interfas General Para Cada Usuario =========================
            =====================================================================================-->
            <StackLayout BackgroundColor="{StaticResource ColorPrincipal}" Padding="0,30,0,30">
                <Label Text="bienvenid@" HorizontalOptions="Center" TextColor="#FFFFFF"></Label>
                <Label x:Name="nombreUsuario" FontSize="40" HorizontalOptions="Center" TextColor="#FFFFFF"></Label>
                <Label x:Name="apellidoUsuario" TextColor="#FFFFFF" HorizontalOptions="Center"></Label>
                <Label x:Name="cargoUsuario" HorizontalOptions="Center"></Label>
                <Label x:Name="cargoUsuario2" IsVisible="False" HorizontalOptions="Center"></Label>
            </StackLayout>
            
            
            <!-- =================================================================================
            ====================== INterfas De Usuario Para el Administrador =====================
            =====================================================================================-->
            <StackLayout x:Name="interfazAdministrador">
                <Label Text="Admnistrador O Gerente"></Label>
            </StackLayout>

            
            <!-- =================================================================================
            ======================== INterfas De Usuario Para el Supervisor ======================
            =====================================================================================-->
            <ListView
                HasUnevenRows="True"
                SeparatorVisibility="None"
                Margin="8"
                x:Name="tareaUsuarioListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="OnMore" CommandParameter="{Binding id}"
                                          Text="Supervisar" />
                            </ViewCell.ContextActions>
                            <Grid 
                                BackgroundColor="{StaticResource BoxColor}" 
                                Padding="8" Margin="0,5,0,5">
                                <Grid.GestureRecognizers>
                                    <PanGestureRecognizer AutomationId=""/>
                                </Grid.GestureRecognizers>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout 
                                    Grid.Column="0">
                                    <Label 
                                        Text="{Binding titulo}"
                                        FontAttributes="Bold"
                                        >
                                    </Label>
                                    <Label 
                                        Text="{Binding descripcion}"
                                        >
                                    </Label>
                                </StackLayout>
                                <Label 
                                    Text="{Binding numeroTarea}" 
                                    Grid.Column="1" 
                                    TextColor="{StaticResource ColorPrincipal}"
                                    FontSize="20"
                                    VerticalOptions="Center">
                                </Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            
            <!-- =================================================================================
            ======================= INterfas De Usuario Para el Responsable ======================
            =====================================================================================-->
            <StackLayout x:Name="interfazResponsable">
                <Label Text="Nos sentimos muy contentos de tener un trabajador tan eficiente como usted. siga así y alcanzaremos el triunfo"></Label>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>